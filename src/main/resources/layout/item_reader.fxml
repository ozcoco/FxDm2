<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<fx:root type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.172-ea"
         xmlns:fx="http://javafx.com/fxml/1">

    <HBox alignment="CENTER_LEFT">
        <JFXCheckBox fx:id="label" scaleX="0.8" scaleY="0.8" scaleZ="0.8">
            <HBox.margin>
                <Insets bottom="8.0" top="8.0"/>
            </HBox.margin>
        </JFXCheckBox>
    </HBox>
    <HBox alignment="CENTER_RIGHT">
        <JFXRadioButton fx:id="status" scaleX="0.8" scaleY="0.8" scaleZ="0.8" text="D">
            <HBox.margin>
                <Insets bottom="8.0" left="8.0" top="8.0"/>
            </HBox.margin>
        </JFXRadioButton>

        <JFXButton fx:id="control" onAction="#onControl" scaleX="0.8" scaleY="0.8" scaleZ="0.8" text="Connect">
            <HBox.margin>
                <Insets bottom="8.0" top="8.0"/>
            </HBox.margin>
        </JFXButton>
    </HBox>

</fx:root>
