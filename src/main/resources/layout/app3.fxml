<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.oz.fx.App3$AppController">
    <children>
        <HBox prefHeight="800.0" prefWidth="1400.0">
            <VBox prefHeight="0.0" prefWidth="260.0">
                <VBox prefHeight="100.0">
                    <HBox maxWidth="Infinity" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">

                        <HBox alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                            <JFXButton maxWidth="Infinity" text="Connect" HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                                </HBox.margin>
                            </JFXButton>
                            <JFXButton maxWidth="Infinity" text="Close" HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                                </HBox.margin>
                            </JFXButton>
                        </HBox>

                        <HBox alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                            <JFXButton maxWidth="Infinity" text="Scan" HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                                </HBox.margin>
                            </JFXButton>
                            <JFXButton maxWidth="Infinity" text="Stop" HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                                </HBox.margin>
                            </JFXButton>
                        </HBox>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" maxWidth="Infinity" style="-fx-background-color: #ffffff;"
                          VBox.vgrow="ALWAYS">
                        <JFXCheckBox text="ALL">
                            <HBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </HBox.margin>
                        </JFXCheckBox>
                    </HBox>
                </VBox>
                <JFXListView fx:id="list_RFID" focusTraversable="false" verticalGap="10.0" VBox.vgrow="ALWAYS"/>
            </VBox>
            <StackPane prefHeight="0.0" prefWidth="1140.0">
                <JFXListView fx:id="list_monitor" focusTraversable="false" verticalGap="10.0" VBox.vgrow="ALWAYS"/>
            </StackPane>
        </HBox>
    </children>
</AnchorPane>
